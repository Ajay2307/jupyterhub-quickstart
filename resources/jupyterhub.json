{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "jupyterhub",
        "annotations": {
            "openshift.io/display-name": "Jupyter Hub",
            "description": "Jupyter Hub for launching Python Notebooks.",
            "iconClass": "icon-python",
            "tags": "python,jupyter"
        }
    },
    "parameters": [
        {
            "name": "JUPYTERHUB_APP_NAME",
            "value": "jupyterhub",
            "required": true
        },
        {
            "name": "JUPYTERHUB_IMAGE_NAME",
            "value": "notebook:3.5",
            "required": true
        },
        {
            "name": "JUPYTERHUB_BLUEPRINT",
            "value": "persistent",
            "required": true
        },
        {
            "name": "JUPYTER_MEMORY_LIMIT",
            "value": "512Mi",
            "required": true
        },
        {
            "name": "JUPYTER_CPU_LIMIT",
            "value": "500m",
            "required": true
        },
        {
            "name": "DATABASE_PASSWORD",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{16}",
            "required": true
        },
        {
            "name": "COOKIE_SECRET",
            "generate": "expression",
            "from": "[a-f0-9]{32}",
            "required": true
        },
        {
            "name": "USER_AUTHENTICATOR",
            "value": ""
        },
        {
            "name": "OAUTH_CALLBACK_URL",
            "value": ""
        },
        {
            "name": "OAUTH_CLIENT_ID",
            "value": ""
        },
        {
            "name": "OAUTH_CLIENT_SECRET",
            "value": ""
        },
        {
            "name": "USER_WHITELIST",
            "value": ""
        },
        {
            "name": "ADMIN_USERS",
            "value": ""
        }
    ],
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_APP_NAME}",
                "labels": {
                    "app": "${JUPYTERHUB_APP_NAME}"
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_APP_NAME}",
                "labels": {
                    "app": "${JUPYTERHUB_APP_NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/getwarped/jupyter-spawner"
                    }
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "DockerImage",
                            "name": "centos/python-35-centos7:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${JUPYTERHUB_APP_NAME}:latest"
                    }
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_APP_NAME}",
                "labels": {
                    "app": "${JUPYTERHUB_APP_NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${JUPYTERHUB_APP_NAME}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${JUPYTERHUB_APP_NAME}:latest"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "selector": {
                    "app": "${JUPYTERHUB_APP_NAME}",
                    "deploymentconfig": "${JUPYTERHUB_APP_NAME}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${JUPYTERHUB_APP_NAME}",
                            "deploymentconfig": "${JUPYTERHUB_APP_NAME}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${JUPYTERHUB_APP_NAME}",
                                "image": "${JUPYTERHUB_APP_NAME}:latest",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "JUPYTERHUB_APP_NAME",
                                        "value": "${JUPYTERHUB_APP_NAME}"
                                    },
                                    {
                                        "name": "JUPYTERHUB_IMAGE_NAME",
                                        "value": "${JUPYTERHUB_IMAGE_NAME}"
                                    },
                                    {
                                        "name": "JUPYTERHUB_BLUEPRINT",
                                        "value": "${JUPYTERHUB_BLUEPRINT}"
                                    },
                                    {
                                        "name": "JUPYTER_MEMORY_LIMIT",
                                        "value": "${JUPYTER_MEMORY_LIMIT}"
                                    },
                                    {
                                        "name": "JUPYTER_CPU_LIMIT",
                                        "value": "${JUPYTER_CPU_LIMIT}"
                                    },
                                    {
                                        "name": "JUPYTERHUB_DATABASE_PASSWORD",
                                        "value": "${DATABASE_PASSWORD}"
                                    },
                                    {
                                        "name": "JUPYTERHUB_DATABASE_HOST",
                                        "value": "${JUPYTERHUB_APP_NAME}-db"
                                    },
                                    {
                                        "name": "JUPYTERHUB_COOKIE_SECRET",
                                        "value": "${COOKIE_SECRET}"
                                    },
                                    {
                                        "name": "JUPYTERHUB_AUTHENTICATOR",
                                        "value": "${USER_AUTHENTICATOR}"
                                    },
                                    {
                                        "name": "OAUTH_CALLBACK_URL",
                                        "value": "${OAUTH_CALLBACK_URL}"
                                    },
                                    {
                                        "name": "OAUTH_CLIENT_ID",
                                        "value": "${OAUTH_CLIENT_ID}"
                                    },
                                    {
                                        "name": "OAUTH_CLIENT_SECRET",
                                        "value": "${OAUTH_CLIENT_SECRET}"
                                    },
                                    {
                                        "name": "JUPYTERHUB_USER_WHITELIST",
                                        "value": "${USER_WHITELIST}"
                                    },
                                    {
                                        "name": "JUPYTERHUB_ADMIN_USERS",
                                        "value": "${ADMIN_USERS}"
                                    }
                                ]
                            }
                        ],
                        "serviceAccountName": "jupyterhub"
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_APP_NAME}",
                "labels": {
                    "app": "${JUPYTERHUB_APP_NAME}"
                },
                "annotations": {
                    "service.alpha.openshift.io/dependencies": "[{\"name\":\"${JUPYTERHUB_APP_NAME}-db\",\"namespace\":\"\",\"kind\":\"Service\"}]"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "8080-tcp",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "app": "${JUPYTERHUB_APP_NAME}",
                    "deploymentconfig": "${JUPYTERHUB_APP_NAME}"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_APP_NAME}",
                "labels": {
                    "app": "${JUPYTERHUB_APP_NAME}"
                }
            },
            "spec": {
                "host": "",
                "to": {
                    "kind": "Service",
                    "name": "${JUPYTERHUB_APP_NAME}",
                    "weight": 100
                },
                "port": {
                    "targetPort": "8080-tcp"
                },
                "tls": {
                    "termination": "edge",
                    "insecureEdgeTerminationPolicy": "Redirect"
                }
            }
        },
        {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_APP_NAME}-db",
                "labels": {
                    "app": "${JUPYTERHUB_APP_NAME}"
                }
            },
            "spec": {
                "accessModes": [
                    "ReadWriteOnce"
                ],
                "resources": {
                    "requests": {
                        "storage": "1Gi"
                    }
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "DeploymentConfig",
            "metadata": {
                "name": "${JUPYTERHUB_APP_NAME}-db",
                "labels": {
                    "app": "${JUPYTERHUB_APP_NAME}"
                }
            },
            "spec": {
                "replicas": 1,
                "selector": {
                    "app": "${JUPYTERHUB_APP_NAME}",
                    "deploymentconfig": "${JUPYTERHUB_APP_NAME}-db"
                },
                "strategy": {
                    "type": "Recreate"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${JUPYTERHUB_APP_NAME}",
                            "deploymentconfig": "${JUPYTERHUB_APP_NAME}-db"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "postgresql",
                                "env": [
                                    {
                                        "name": "POSTGRESQL_USER",
                                        "value": "jupyterhub"
                                    },
                                    {
                                        "name": "POSTGRESQL_PASSWORD",
                                        "value": "${DATABASE_PASSWORD}"
                                    },
                                    {
                                        "name": "POSTGRESQL_DATABASE",
                                        "value": "jupyterhub"
                                    }
                                ],
                                "livenessProbe": {
                                    "tcpSocket": {
                                        "port": 5432
                                    }
                                },
                                "ports": [
                                    {
                                        "containerPort": 5432,
                                        "protocol": "TCP"
                                    }
                                ],
                                "readinessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/sh",
                                            "-i",
                                            "-c",
                                            "psql -h 127.0.0.1 -U $POSTGRESQL_USER -q -d $POSTGRESQL_DATABASE -c 'SELECT 1'"
                                        ]
                                    }
                                },
                                "resources": {
                                    "limits": {
                                        "memory": "256Mi"
                                    }
                                },
                                "volumeMounts": [
                                    {
                                        "mountPath": "/var/lib/pgsql/data",
                                        "name": "data"
                                    }
                                ]
                            }
                        ],
                        "volumes": [
                            {
                                "name": "data",
                                "persistentVolumeClaim": {
                                    "claimName": "${JUPYTERHUB_APP_NAME}-db"
                                }
                            }
                        ]
                    }
                },
                "triggers": [
                    {
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "postgresql"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "postgresql:9.5",
                                "namespace": "openshift"
                            }
                        },
                        "type": "ImageChange"
                    },
                    {
                        "type": "ConfigChange"
                    }
                ]
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_APP_NAME}-db",
                "labels": {
                    "app": "${JUPYTERHUB_APP_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "5432-tcp",
                        "protocol": "TCP",
                        "port": 5432,
                        "targetPort": 5432
                    }
                ],
                "selector": {
                    "app": "${JUPYTERHUB_APP_NAME}",
                    "deploymentconfig": "${JUPYTERHUB_APP_NAME}-db"
                }
            }
        }
    ]
}
